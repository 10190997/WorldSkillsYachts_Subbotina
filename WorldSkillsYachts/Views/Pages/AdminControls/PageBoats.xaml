<Page x:Class="WorldSkillsYachts.Views.Pages.PageBoats"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WorldSkillsYachts.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageBoats" Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0">
            <DataGrid 
                x:Name="BoatGrid">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Модель" Width="auto"
                                    Binding="{Binding Model}"/>
                    <DataGridTextColumn Header="Тип лодки" Width="auto"
                                    Binding="{Binding BoatType}"/>
                    <DataGridTextColumn Header="Количество мест для гребцов" Width="auto"
                                    Binding="{Binding NumberOfRowers}"/>
                    <DataGridTextColumn Header="Mast" Width="auto"
                                    Binding="{Binding Mast}"/>
                    <DataGridTextColumn Header="Цвет" Width="auto"
                                    Binding="{Binding Colour}"/>
                    <DataGridTextColumn Header="Дерево" Width="auto"
                                    Binding="{Binding Wood}"/>
                    <DataGridTextColumn Header="Базовая цена" Width="auto"
                                    Binding="{Binding BasePrice, StringFormat=0.00, ConverterCulture='ru-Ru'}"/>
                    <DataGridTextColumn Header="Налог" Width="auto"
                                    Binding="{Binding VAT}"/>
                    <DataGridTemplateColumn Width="auto">
                        <DataGridTemplateColumn.Header>
                            <Label>Действия</Label>
                        </DataGridTemplateColumn.Header>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button 
                                            Click="EditButton_Click" 
                                            Content="Редактировать"
                                            Width="150"
                                            Style="{DynamicResource SmallButton}"/>
                                    <Button 
                                            Click="RemoveButton_Click" 
                                            Content="Удалить"
                                            Style="{DynamicResource SmallButton}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="#FF009FDA"/>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>
        </ScrollViewer>
        <StackPanel 
            Orientation="Horizontal"
            Grid.Row="1"
            HorizontalAlignment="Center">
            <Button 
                Content="Добавить"
                x:Name="AddButton"
                Style="{DynamicResource SmallButton}" 
                Click="AddButton_Click"/>
            <Button 
                Content="Групповое изменение цен"
                x:Name="ChangePriceButton"
                Width="200"
                Style="{DynamicResource SmallButton}" Click="ChangePriceButton_Click"/>
        </StackPanel>

    </Grid>
</Page>
